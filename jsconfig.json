{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@store/*": ["src/store/*"],
      "@shared/*": ["shared/*"],
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@service/*": ["src/service/*"],
      "@util/*": ["src/util/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.jsx"]
}
